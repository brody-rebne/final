<html>

<head>
  <title>Star Wars People</title>
  <link rel="stylesheet" href="/css/reset.css" />
  <link rel="stylesheet" href="/css/style.css" />
</head>

<body>
  <header>
    <h1>Star Wars Characters</h1>
    <p>Vote for your favorites to show what you like!</p>
  </header>
  <main>
    <section class="add">
      <h3>Add a New Character:</h3>
      <form action="/add" method="post">
        <input ype="number" placeholder="Character ID">
        <button type="submit">Add</button>
      </form>
    </section>
    <section class="characters">

      <% results.forEach(result => { %>
      <div class="character">
        <header>
          <h2><%= result.name %></h2>
        </header>
        <span><%= result.likes || 0 %></span>
        <button class="upvote" name="<%= result.id %>">Upvote</button>
      </div>
      <% }); %>

    </section>
  </main>
  <footer>
    <strong>&copy; 2020 Code Fellows</strong>
  </footer>
  <script
  src="https://code.jquery.com/jquery-3.4.1.slim.js"
  integrity="sha256-BTlTdQO9/fascB1drekrDVkaKd9PkwBymMlHOiG+qLI="
  crossorigin="anonymous"></script>
  <script src="/js/app.js"></script>
</body>

</html>
