<html>
<head>
  <title>Star Wars People</title>
  <link href="https://fonts.googleapis.com/css?family=Lato|Montserrat:900&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="/css/reset.css" />
  <link rel="stylesheet" href="/css/base.css" />
  <link rel="stylesheet" href="/css/layout.css" />
  <link rel="stylesheet" href="/css/modules.css" />
  <script id="handlebars" type="text/x-handlebars-template">
    <div class="character">
      <header>
        <h2>{{name}}</h2>
      </header>
      <span>{{votes}}</span>
      <button class="upvote" name={{id}}>Upvote</button>
    </div>
  </script>
</head>

<body>
  <header>
    <h1>Star Wars Characters</h1>
    <p>Vote for your favorites to show what you like!</p>
  </header>
  <main>
    <section class="add">
      <h3>Add New Characters:</h3>
      <button id="add">Add</button>
    </section>
    <section class="characters">
      <% results.forEach(result => { %>
      <div class="character">
        <header>
          <h2><%= result.name %></h2>
        </header>
        <span><%= result.likes || 0 %></span>
        <button class="upvote" name="<%= result.name %>">Upvote</button>
      </div>
      <% }); %>
    </section>
  </main>
  <footer>
    <strong>&copy; 2020 Code Fellows</strong>
  </footer>
  <script
  src="https://code.jquery.com/jquery-3.4.1.min.js"
  integrity="sha256-CSXorXvZcTkaix6Yvo6HppcZGetbYMGWSFlBw8HfCJo="
  crossorigin="anonymous"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/handlebars.js/4.7.3/handlebars.min.js"></script>
  <script src="/js/app.js"></script>
</body>
</html>
